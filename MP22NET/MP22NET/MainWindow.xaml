<mui:ModernWindow x:Class="MP22NET.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        Title="OnYourWay" IsTitleVisible="True"
        ContentSource="/Pages/Home.xaml">

    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="Accueil">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="Carte du magasin" Source="/Pages/Home.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
        <mui:LinkGroup DisplayName="Administration" GroupKey="admin">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="Administration du magasin" Source="/Pages/Administration.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
        <mui:LinkGroup DisplayName="Paramètres" GroupKey="settings">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="Logiciel" Source="/Pages/SettingsPage.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>
    
    <mui:ModernWindow.TitleLinks>
        <mui:Link DisplayName="Accueil" Source="/Pages/Home.xaml" />
        <mui:Link DisplayName="Administration" Source="/Pages/Administration.xaml" />
        <mui:Link DisplayName="Paramètres" Source="/Pages/SettingsPage.xaml" />        
    </mui:ModernWindow.TitleLinks>
</mui:ModernWindow>
